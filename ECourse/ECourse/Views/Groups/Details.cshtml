@model ECourse.Models.Group

@{
    ViewBag.Title = "Detalles de Grupo";
}

<h2>Detalles</h2>

<div class=" row">
    <div class="col-md-6">
        <div>
            <h4>Grupo</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Courses.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Courses.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Instructor.FullName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Instructor.FullName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Capacity)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Capacity)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StartDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsActive)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Asignar", "AddToStudent", new { id = Model.GroupId }, new { @class = "btn btn-info" })
            @Html.ActionLink("Editar", "Edit", new { id = Model.GroupId }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-success" })
        </p>
    </div>
    <div class="col-md-6">
        <hr />
        <div>
            @if (!string.IsNullOrEmpty(Model.Instructor.Photo))
            {
                <img src="@Url.Content(Model.Instructor.Photo)" alt="Image" style="width:150px;height:150px;max-width: 100%; height: auto;" />
            }
        </div>
    </div>
</div>

<h4>Lista de Estudiantes</h4>

<table class="table">
    <tr>
        <th>
            Nombre Completo
        </th>
        <th>
            Fecha de Inscripcion
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.GroupDetailsTmp.ToList())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.ActionLink("Confirmar", "AddToStudent", new { id = Model.GroupId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Retirar", "Edit", new { id = Model.GroupId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>